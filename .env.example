# Database
DATABASE_URL=./server/chess_tournaments.db

# Server
PORT=5000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
